{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "ESNext",
        "target": "ES2015",
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "moduleResolution": "Node"
    },
    "include": [
        "src/**/*"
    ]
}
